
$(function (){
  $(document).ready(function () {
    $('#one').fadeIn(2000).removeClass('hidden');
});
  $('#one').on('mouseenter',function () {
    $('#two').show();
  });
  $('#one').on('mouseleave',function () {
    $('#two').hide();
  });
    $('.main-event-size').on('hover',function () {
    $('.main-event-size> div > p:eq(0)').show();
  });

});
